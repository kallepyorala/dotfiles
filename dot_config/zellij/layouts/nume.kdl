plugins {
    compact-bar location="zellij:compact-bar" {
      tooltip "Ctrl i"
    }
}

layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="compact-bar"
        }
    }

    tab name="dev" focus=true {
        pane split_direction="vertical" {
            pane size="70%" {
                command "zsh"
                args "-ic" "claude --continue --dangerously-skip-permissions"
            }
            pane split_direction="horizontal" size="30%" {
                pane {
                    cwd "apps/web"
                    command "pnpm"
                    args "dev"
                }
                pane {
                    cwd "apps/ai"
                    command "make"
                    args "dev"
                }
                pane size="10%" {
                    cwd "apps/nume-dev-helper"
                    command "uv"
                    args "run" "helper"
                }
            }
        }
    }

    tab name="git" {
        pane {
            command "lazygit"
        }
    }
}
