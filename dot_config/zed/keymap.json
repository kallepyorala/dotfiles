// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Editor && mode == full",
    "bindings": {
      "ctrl-shift-enter": ["assistant::InlineAssist", { "prompt": "Format" }]
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "cmd-shift-g": "git_panel::ToggleFocus",
      "cmd-l": "workspace::ToggleLeftDock",
      "cmd-r": "workspace::ToggleRightDock",
      "cmd-b": "workspace::ToggleBottomDock",
      "ctrl-c": "workspace::CloseAllDocks"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "cmd-l": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "j k": "vim::NormalBefore",
      "ctrl-e": ["workspace::SendKeystrokes", "ctrl-x ctrl-z"],
      "ctrl-y": "assistant::InlineAssist",
      "ctrl-c": "editor::ShowCompletions"
    }
  },
  {
    "context": "vim_operator == a || vim_operator == i || vim_operator == cs",
    "bindings": {
      "q": "vim::MiniQuotes",
      "b": "vim::MiniBrackets"
    }
  },
  {
    "context": "vim_mode == normal || vim_mode == visual",
    "bindings": {
      "s": "vim::PushSneak",
      "shift-s": "vim::PushSneakBackward",
      "g s": "editor::GoToDefinitionSplit",
      "Q": "pane::CloseActiveItem"
    }
  },
  {
    "context": "Editor && edit_prediction",
    "bindings": {
      "alt-`": "editor::AcceptEditPrediction",
      "tab": "editor::AcceptEditPrediction",
      "ctrl-cmd-right": "editor::AcceptPartialEditPrediction"
    }
  },
  {
    "context": "Editor && multibuffer",
    "bindings": {
      "g s": "editor::OpenExcerptsSplit",
      "ctrl-shift-j": "editor::MoveToStartOfNextExcerpt",
      "ctrl-shift-k": "editor::MoveToEndOfPreviousExcerpt"
    }
  },
  {
    "context": "Dock || Editor",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "ContextEditor > Editor",
    "bindings": {
      "ctrl-alt-shift-e": "search::SelectPreviousMatch"
    }
  },
  {
    "context": "ContextEditor > Editor",
    "bindings": {
      "ctrl-shift-g": "search::SelectPreviousMatch"
    }
  },
  {
    "bindings": {
      "cmd-k cmd-.": "project_panel::CollapseAllEntries"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "cmd-shift-t": "terminal_panel::Toggle"
    }
  }
]
