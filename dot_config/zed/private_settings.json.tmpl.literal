// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
	"show_edit_predictions": true,
 "agent_servers": {
  "claude": {
   "default_mode": "bypassPermissions"
  }
 },
 "context_servers": {
		"mcp-server-linear": {
   "source": "extension",
   "enabled": true,
   "settings": {
    "linear_api_key": "{{ exec \"op\" \"read\" \"op://Personal/token-linear/password\" }}"
   }
  },
  "postgres-context-server": {
   "source": "extension",
   "enabled": true,
   "settings": {
    "database_url": "postgres:postgres@localhost:5432/web"
   }
  },
  "chrome-devtools": {
   "source": "custom",
   "enabled": true,
   "command": "npx",
   "args": [
    "chrome-devtools-mcp@latest"
   ]
  },
  "mcp-server-context7": {
   "source": "extension",
   "enabled": true,
   "settings": {
    "context7_api_key": "{{ exec \"op\" \"read\" \"op://Personal/token-context7/password\" }}"
   }
  },
  "mcp-server-github": {
			"source": "extension",
			"enabled": true,
			"settings": {
				"github_personal_access_token": "{{ exec \"op\" \"read\" \"op://Personal/token-github/password\" }}"
			}
		}
	},
	"edit_predictions": {
		"mode": "subtle",
		"copilot": {
			"proxy": null,
			"proxy_no_verify": null
		},
		"enabled_in_text_threads": false
	},
	"features": {
		"edit_prediction_provider": "zed"
	},
	"icon_theme": "Catppuccin Mocha",
	"agent": {
		"default_profile": "write",
		"always_allow_tool_actions": true,
		"default_model": {
			"provider": "anthropic",
			"model": "claude-sonnet-4-5-latest"
		},
		"dock": "left",
		"default_width": 535
	},
	"git_panel": {
		"default_width": 550
	},
	"base_keymap": "VSCode",
	"vim_mode": true,
	"ui_font_size": 16,
	"buffer_font_size": 14,
	"buffer_font_family": "MonoLisaV2 Nerd Font",
	"theme": {
		"mode": "system",
		"light": "One Light",
		"dark": "Catppuccin Mocha"
	},
	"project_panel": {
		"dock": "right"
	},
	"vim": {
		"use_smartcase_find": true,
		"toggle_relative_line_numbers": true,
		"highlight_on_yank_duration": 50
	},
	"relative_line_numbers": "enabled",
	"languages": {
		"JavaScript": {
			"formatter": [
        {
          "code_action": "source.fixAll.biome"
        },
        {
          "code_action": "source.organizeImports.biome"
        },
        {
          "language_server": {
            "name": "biome"
          }
        }
      ]
		},
		"TypeScript": {
			"formatter": [
        {
          "code_action": "source.fixAll.biome"
        },
        {
          "code_action": "source.organizeImports.biome"
        },
        {
          "language_server": {
            "name": "biome"
          }
        }
      ]
		},
		"TSX": {
			"formatter": [
        {
          "code_action": "source.fixAll.biome"
        },
        {
          "code_action": "source.organizeImports.biome"
        },
        {
          "language_server": {
            "name": "biome"
          }
        }
      ]
		},
		"JSON": { "formatter": { "language_server": { "name": "biome" } } },
		"JSONC": { "formatter": { "language_server": { "name": "biome" } } },
		"CSS": { "formatter": { "language_server": { "name": "biome" } } },
		"Python": {
			"language_servers": ["pyright", "ruff"],
			"format_on_save": "on",
			"formatter": [
				{ "code_action": "source.organizeImports.ruff" },
     { "code_action": "source.fixAll.ruff" },
				{
					"language_server": {
						"name": "ruff"
					}
				}
			]
		}
	},
	"lsp": {
		"biome": {
			"settings": {
				"require_config_file": true
			}
		}
	}
}
