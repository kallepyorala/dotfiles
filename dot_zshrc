# Atuin with fzf UI
atuin-fzf() {
  local selected
  selected=$(atuin history list --cmd-only | fzf --tac --no-sort --height=40% --query="$LBUFFER")
  if [[ -n "$selected" ]]; then
    LBUFFER="$selected"
  fi
  zle reset-prompt
}
zle -N atuin-fzf
bindkey '^[[A' atuin-fzf
bindkey '^r' atuin-fzf

